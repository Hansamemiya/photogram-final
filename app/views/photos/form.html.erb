<h1>Add a New Photo</h1>

<%= form_for @photo, url: photos_path, html: { multipart: true } do |f| %>
  <div>
    <%= f.label :caption %><br>
    <%= f.text_area :caption %>
  </div>

  <div>
    <%= f.label :image, "Upload Image" %><br>
    <!-- CarrierWave expects a file field for :image -->
    <%= f.file_field :image %>
  </div>

  <%= f.submit "Create Photo" %>
<% end %>
