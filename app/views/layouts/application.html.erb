<!DOCTYPE html>
<html>
<head>
  <title>Photogram</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
</head>
<body>

<!-- FLASH MESSAGES -->
<% flash.each do |key, message| %>
  <% if message.present? %>
    <div class="<%= key %>"><%= message %></div>
  <% end %>
<% end %>

<!-- NAV LINKS (tests expect these on the home page) -->
<nav>
  <ul>
    <li><%= link_to "All users", users_path %></li>
    <li><%= link_to "All public photos", photos_path %></li>
    <% if user_signed_in? %>
      <li><%= link_to "Sign out", "/users/sign_out" %></li>
    <% else %>
      <li><%= link_to "Sign in", "/users/sign_in" %></li>
      <li><%= link_to "Sign up", "/users/sign_up" %></li>
    <% end %>
  </ul>
</nav>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
