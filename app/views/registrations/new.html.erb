<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %> <span>(6 characters minimum)</span><br />
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :private %>
    <%= f.check_box :private %>
  </div>

  <div>
    <%= f.submit "Sign up" %>
  </div>

  <div>
    <%= f.submit "Sign up" %>
  </div>
<% end %>

