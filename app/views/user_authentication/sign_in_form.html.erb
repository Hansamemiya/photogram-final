<h2>Sign In</h2>

<%= form_tag(user_verify_credentials_path, method: "post") do %>
  <div>
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Sign In" %>
<% end %>

<%= link_to "Don't have an account? Sign up", user_sign_up_path %>
